import pandas as pd
import matplotlib.pyplot as plt

# Load the dataset
data = pd.read_csv('world_population.csv')

# Suppose we are focusing on population by age or gender (this is hypothetical)
# Create a bar chart for gender distribution (assuming the dataset has a 'gender' column)
gender_data = data['Gender'].value_counts()

# Plotting a bar chart for gender distribution
plt.figure(figsize=(8,6))
gender_data.plot(kind='bar', color=['blue', 'pink'])
plt.title('Population Distribution by Gender', fontsize=16)
plt.xlabel('Gender', fontsize=12)
plt.ylabel('Population Count', fontsize=12)
plt.show()

# Similarly, you can plot a histogram for age distribution
plt.figure(figsize=(8,6))
plt.hist(data['Age'], bins=10, color='skyblue', edgecolor='black')
plt.title('Age Distribution in Population', fontsize=16)
plt.xlabel('Age', fontsize=12)
plt.ylabel('Frequency', fontsize=12)
plt.show()
